<div class="bg-white p-8 rounded shadow max-w-[800px] w-full">
  <h2 class="text-xl font-bold mb-4">Ajouter Enseignant</h2>

  <form method="POST" class="space-y-4">
    <input name="nom" placeholder="Nom" class="w-full p-2 border rounded" required />
    <input name="email" type="email" placeholder="Email" class="w-full p-2 border rounded" required />
    <input name="motDePasse" type="password" placeholder="Mot de passe" class="w-full p-2 border rounded" required />

    <button class="w-full bg-green-600 text-white p-2 rounded">
      Ajouter
    </button>
  </form>
</div>
