<div class="bg-white p-8 rounded shadow max-w-[800px] w-full">
  <h2 class="text-xl font-bold mb-4">
    Réserver la salle <%= salle.nom %>
  </h2>

  <form method="POST" class="space-y-4">
    <input type="date" name="date" class="w-full p-2 border rounded" required />
    <input type="time" name="heureDebut" class="w-full p-2 border rounded" required />
    <input type="time" name="heureFin" class="w-full p-2 border rounded" required />

    <button class="w-full bg-green-600 text-white p-2 rounded">
      Confirmer la réservation
    </button>
  </form>
</div>
